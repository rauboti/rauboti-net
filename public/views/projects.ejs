<!DOCTYPE html>
<html>
  <head>
    <title><%=title%></title>
    <!-- Cleaner font -->
    <link href="https://fonts.googleapis.com/css?family=Rajdhani" rel="stylesheet">
    <!-- CSS source files -->
    <!--<link rel="stylesheet" href="/css/main.css" />-->
    <!--<link rel="stylesheet" href="/css/boti.css" />-->
    <!--<link rel="stylesheet" href="/css/responsive.css" />-->
    <% if (device === 'desktop') {%><link rel="stylesheet" href="/css/boti-desktop.css" /><%} else if (device === 'phone') {%><link rel="stylesheet" href="/css/boti-mobile.css" /><%}%>
    <nav>
      <menu>
        <% for(var i=0; i<menu.length; i++) { if (menu[i].id === activePage) {%>
        <button onclick="location.href=location.origin + '<%=menu[i].path%>';" class="selected"><%=menu[i].text%></button>
        <%} else {%>
        <button onclick="location.href=location.origin + '<%=menu[i].path%>';"><%=menu[i].text%></button>
        <%}}%>
      </menu>
    </nav>
  </head>
  <body>
    <section>
        <% for (var i = 0; i < projects.length; i++) {%>
          <a href="<%=projects[i].link%>" target="_blank"><div class="projectContainer"><div class="projectContainer-header"><%=projects[i].name%></div><div class="projectContainer-ingress"><%=projects[i].description%></div></div></a>
        <%}%>
    </section>
  </body>
  <foot>
    <!-- JS source files -->
    <script src="/js/jquery-3.3.1.min.js"></script>
    <script src="/js/main.js"></script>
  </foot>
</html>
